<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4B5"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข่าวประชาสัมพันธ์ ฝ่ายวิชาการ"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:text="ส่งนักศึกษาเข้าร่วมงาน SEA Makerthon ณ มหาวิทยาลัยเทคโนโลยีราชมงคลล้านนา เชียงใหม่"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_weight="0.04"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ฝึกอบรมเชิงปฏิบัติการ &quot;การพัฒนาซอฟต์แวร์แบบคล่องตัว&quot; "
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textSize="16dp"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="แนะแนวการศึกษาต่อแผนกเทคโนโลยีสารสนเทศ"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_weight="0.04"
        android:layout_marginTop="15dp" />
</LinearLayout>